{% extends 'base.html.twig' %}
{% block title %}Begreen - Changer mes informations{% endblock %}

{% block body %}

	<link rel="stylesheet" href="{{asset('css/modifProfil.css')}}">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

	<div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
		<div class="wrapper wrapper--w680">
			<div class="card card-4">
				<div class="card-body">
					<h2 class="title">Modifier mon Profil</h2>
					{{ form_start(form) }}
					<div class="row row-space">
						<div class="col-2">
							<div class="input-group">
								<div class="form-group mt-4">{{form_row(form.lastName, {'attr':{'class':'input--style-4'}})}}</div>
							</div>
						</div>
						<div class="col-2">
							<div class="input-group">
								<div class="form-group mt-4">{{form_row(form.name, {'attr':{'class':'input--style-4'}})}}</div>
							</div>
						</div>
					</div>
					<div class="row row-space">
						<div class="col-2">
							<div class="input-group">
								<div class="form-group">{{form_row(form.email, {'attr':{'class':'input--style-4'}})}}</div>
							</div>
						</div>
						<div class="col-2">
							<div class="input-group">
								<a class="password" href="{{ path('app_forgot_password_request') }}">Changer Mon mot de passe</a>
							</div>
						</div>
					</div>
					<div class="p-t-15">
						<button class="btn btn--radius-2 btn--green" type="submit">Confirmer</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
