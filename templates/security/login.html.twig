			{
				# background: linear-gradient(90deg, #6e865e, #5cb136); #
			}
		}

		body {
			
			
			background-image: url("asset/login.jpeg");
			background-position:center;
		    background-repeat: no-repeat;
            background-color: #5cb136;
			 
			
		}
         
       
		.bg {
			background-color:#6e865e ;
			padding: 20px;
			width: 402px;
